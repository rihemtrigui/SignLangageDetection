<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HelloAlex">

    <TextView
        android:id="@+id/helloAlex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/alexImg"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/letsStartAlex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let's start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alexImg"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/alexImg"
        android:layout_width="282dp"
        android:layout_height="380dp"
        app:srcCompat="@drawable/alex"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/helloAlex"
        android:layout_marginTop="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
